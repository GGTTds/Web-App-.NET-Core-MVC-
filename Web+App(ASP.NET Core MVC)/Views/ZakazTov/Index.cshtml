@model IEnumerable<Web_App_ASP.NET_Core_MVC_.HarkDron>
@{
    @ViewBag.Title
}
<section id="about" class="parallax-section">
    <div class="container">
        <div class="row">
            @foreach (var s in Model)
            {
                <div class="col-md-4 col-sm-8">
                    <div class="about-image-thumb">
                        <img src="~/@s.ImgDron.Replace(".jpg", "v1.jpg")" class="wow fadeInUp img-responsive" data-wow-delay="0.2s" alt="about image">
                        <ul class="social-icon">
                            <li><a href="#" class="fa fa-facebook"></a></li>
                            <li><a href="#" class="fa fa-twitter"></a></li>
                            <li><a href="#" class="fa fa-instagram"></a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8 col-sm-12">
                    <div class="about-thumb">
                        <!-- SECTION TITLE -->
                        <div class="wow fadeInUp section-title" data-wow-delay="0.6s">
                            <h2>@s.full_name</h2>
                            <p></p>
                        </div>
                        <div class="wow fadeInUp" data-wow-delay="0.8s">
                            <p>Квадракоптер <b>@s.full_name</b> является беспилотным летательным аппаратом, управляемым с помощью пульта. Беспилотник представляет собой разновидность мультикоптера. В нашем случае устройство имеет четыре мотора (винта), за что и получило название "квадрокоптер".</p>
                            <br />
                            <h1>Предназначение беспилотника</h1>
                            <p>Квадракоптер широко используется в различных областях, которые связаны не только с предоставлением услуг развлечения. С помощью летательного аппарата осуществляются следующие виды работ:</p>
                            <ul>
                                <li>Картографическая съемка</li>
                                <li>Операции поисковых отрядов и спасательные мероприятия></li>
                                <li>Осуществление доставки грузов с небольшим весом</li>
                            </ul>
                        </div>

                    </div>
                </div>
       
        <div class="wow fadeInUp col-md-4 col-sm-6" data-wow-delay="0.4s">
            <!-- WORK THUMB -->
            <div class="work-thumb">
                <div class="work-thumb-overlay">
                    <h5 class="white-color">О товаре</h5>
                    <h4>Батарея: @s.Battery мА·ч</h4>
                    <h4>Цвет: @s.Color.Value</h4>
                    <h4>Вес: @s.Ves</h4>
                    @if (s.IsCamr == true)
                    {
                        <h5>Камера: есть</h5>
                    }
                    else
                    {
                        <h5> Камера: нет</h5>
                    }
                </div>
               <p align="center"> <img src="~/@s.ImgDron.Replace(".jpg", "v2.jpg")" class="img-responsive" alt="Work 1"></p>
            </div>
        </div>
        <div class="col-md-12 col-sm-12">
            <!-- SECTION TITLE -->
            <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                <h2 align="center">Заказать</h2>
            </div>
        </div>

        <div class="col-md-7 col-sm-10">
            <div class="wow fadeInUp" data-wow-delay="0.4s">
                <form id="contact-form" asp-action="create" method="post">
                    <div class="col-md-6 col-sm-6">
                        <input type="text" class="form-control" name="AddresDost" placeholder="Адрес доставки" required="">
                    </div>
                    <div class="col-md-offset-8 col-md-4 col-sm-offset-6 col-sm-6">
                        <div class="col-md-offset-8 col-md-4 col-sm-offset-6 col-sm-6">
                            <button id="submit" type="submit" class="form-control" name="submit">Заказать звонок</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</section>
    